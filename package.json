{
  "name": "api",
  "version": "1.0.1",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "next dev --turbo -p 3000",
    "dev:remote": "npm run dev:host --prefix remotes/products",
    "dev:remote:chat": "npm run dev:host --prefix remotes/chat",
    "dev:docker": "docker compose -f docker/docker-compose.dev.yml up",
    "docker:products": "docker compose -f remotes/products/docker-compose.yml up --build -d",
    "docker:one-server": "docker compose -f docker/one-server/docker-compose.yml up --build",
    "deploy:products": "npm run deploy --prefix remotes/products",
    "deploy:chat": "npm run deploy --prefix remotes/chat",
    "deploy:all": "npm run deploy --prefix remotes/products && npm run deploy --prefix remotes/chat",
    "deploy:host": "npm version patch --no-git-tag-version && docker compose -f docker/one-server/docker-compose.yml up --build -d",
    "dev:all": "concurrently -n H,P,C -c blue,green,yellow \"npm run dev\" \"npm run dev:host --prefix remotes/products\" \"npm run dev:host --prefix remotes/chat\"",
    "build": "next build --turbopack",
    "build:docker": "cross-env DOCKER_BUILD=1 next build",
    "build:analyze": "npx cross-env ANALYZE=true next build --turbopack",
    "start": "next start",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "check:host-react": "node check-host-react-exports.js",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --max-warnings 0 --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@tanstack/react-query": "5.90.20",
    "@tanstack/react-virtual": "3.13.18",
    "clsx": "2.1.1",
    "immer": "11.1.3",
    "lottie-react": "^2.4.1",
    "lucide-react": "0.563.0",
    "motion": "^12.34.0",
    "next": "^15.5.12",
    "next-intl": "^4.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.71.1",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@next/bundle-analyzer": "^16.1.6",
    "@tailwindcss/postcss": "4.1.18",
    "@tailwindcss/vite": "4.1.18",
    "@tanstack/react-query-devtools": "5.62.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.10.1",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@vitejs/plugin-react": "4.2.1",
    "@vitest/coverage-v8": "4.0.18",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-better-tailwindcss": "4.1.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "jsdom": "28.0.0",
    "prettier": "3.8.1",
    "rollup-plugin-visualizer": "6.0.5",
    "tailwindcss": "4.1.18",
    "typescript": "5.7.2",
    "typescript-eslint": "8.54.0",
    "vite": "5.4.21",
    "vitest": "4.0.18"
  }
}
